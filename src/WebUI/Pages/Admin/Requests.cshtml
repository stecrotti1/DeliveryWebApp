@page
@model DeliveryWebApp.WebUI.Pages.Admin.RequestsModel
@{
    ViewData["Title"] = "Requests";
}

@section Head
{
    <style>
        .user-detail {
            text-decoration: none;
        }
    </style>
}

<h1>Users Requests</h1>

<table class="table">
    <thead>
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.Requests[0].Id)
        </th>
        <th>
            User
        </th>
        <th>
            Role Requested
        </th>
        <th>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Requests) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a class="user-detail" asp-page="/Admin/RequestDetail" asp-route-id="@item.Id">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                    </svg>
                    User
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-page="/Admin/RequestDetail" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>
