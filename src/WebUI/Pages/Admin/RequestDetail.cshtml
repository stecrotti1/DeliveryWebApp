@page "{id:int?}"
@model DeliveryWebApp.WebUI.Pages.Admin.RequestDetailModel
@{
    ViewData["Title"] = "Request Detail";
}

<h1>Detail of Request: @Model.UserRequest.Id</h1>

<div>
    <h4>Request</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserRequest.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Email)
        </dd>
        <dt class="col-sm-2">
            Current Role
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClaimValue)
        </dd>
        <dt class="col-sm-2">
            Role Requested
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.UserRequest.Role)
        </dd>
        @if (Model.IsRider)
        {
            <div class="form-floating">
                <input asp-for="Input.DeliveryCredit" class="form-control" />
                <label asp-for="Input.DeliveryCredit"></label>
                <span asp-validation-for="Input.DeliveryCredit" class="text-danger"></span>
            </div>
        }
    </dl>
</div>

<div class="form-group">
    <button type="submit" value="Accept" class="btn btn-outline-dark">
        <img src="icons/check2.svg" alt="check" />
        Accept
    </button>
    <button type="submit" value="Reject" class="btn btn-outline-dark">
        <img src="icons/x.svg" alt="cross" />
        Reject
    </button>
</div>

<div>
    <a asp-page="/Admin/Requests">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}