@page "{id:int?}"
@model DeliveryWebApp.WebUI.Pages.Admin.OrderDetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details of order: @Model.Order.Id</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Restaurant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Restaurant.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Restaurant.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Restaurant.Category)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>