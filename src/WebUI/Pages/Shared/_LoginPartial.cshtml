@using DeliveryWebApp.Infrastructure.Identity
@using DeliveryWebApp.Infrastructure.Security
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IAuthorizationService AuthorizationService
@inject IViewLocalizer localizer

@{
    var isRestaurateur = (await AuthorizationService.AuthorizeAsync(User, PolicyName.IsRestaurateur)).Succeeded;
    var isRider = (await AuthorizationService.AuthorizeAsync(User, PolicyName.IsRider)).Succeeded;
    var isClient = (await AuthorizationService.AuthorizeAsync(User, PolicyName.IsCustomer)).Succeeded;
    var isAdmin = User.IsInRole(RoleName.Admin);
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="btn-group">
                <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    @User.Identity.Name
                </button>

                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                            <img src="/icons/person.svg" alt="profile" height="16" width="16" />
                            @localizer["Profile"]
                        </a>
                    </li>

                    @if (isRestaurateur)
                    {
                        <li>
                            <a class="dropdown-item" asp-page="/Restaurateur/RestaurantDashboard">
                                <img src="/icons/shop.svg" alt="shop" height="16" width="16" />
                                @localizer["Dashboard"]
                            </a>
                        </li>
                        @*<li>
                                <a class="dropdown-item">Products</a>
                            </li>*@
                    }
                    @if (isRider)
                    {
                        <li>
                            <a class="dropdown-item">
                                <img src="/icons/piggy-bank.svg" alt="piggy-bank" height="16" width="16" />
                                @localizer["Credit"]
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item">
                                <img src="/icons/inbox.svg" alt="inbox" />
                                @localizer["Open Orders"]
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item">
                                <img src="/icons/clock-history.svg" alt="clock-history" height="16" width="16" />
                                @localizer["Delivery History"]
                            </a>
                        </li>
                    }
                    @if (isClient)
                    {
                        <li>
                            <a class="dropdown-item" asp-page="/Customer/Orders">
                                <img src="/icons/clock-history.svg" alt="clock-history" height="16" width="16" />
                                @localizer["Order History"]
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Request">
                                <img src="/icons/person-badge.svg" alt="person-badge" height="16" width="16" />
                                @localizer["Role Request"]
                            </a>
                        </li>
                    }
                    @if (isAdmin)
                    {
                        <li>
                            <a class="dropdown-item" asp-page="/Admin/Requests">
                                <img src="/icons/person-badge.svg" alt="person-badge" height="16" width="16" />
                                @localizer["User Requests"]
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-page="/Admin/UserList">
                                <img src="/icons/people.svg" alt="people" height="16" width="16" />
                                @localizer["User List"]
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-page="/Admin/Orders">
                                <img src="/icons/box-seam.svg" alt="box-seam" height="16" width="16" />
                                @localizer["Orders"]
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    @* Logout img *@
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                        <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                    </svg>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>