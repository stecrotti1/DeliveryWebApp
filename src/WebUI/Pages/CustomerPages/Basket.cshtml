@page
@model DeliveryWebApp.WebUI.Pages.CustomerPages.BasketModel
@{
    ViewData["Title"] = "Cart";
}

@if (Model.Basket == null)
{
    <div class="alert alert-secondary" role="alert">
        Your cart is empty
    </div>
    <div class="text-center">
        <img src="/icons/undraw_empty_cart_co35.svg" alt="empty_cart" height="500" width="500"/>
    </div>
}
else
{
    // TODO: jsgrid?
    <div class="card">
        <div class="row">
            <div class="card-title">
                <h4>@ViewData["Title"]</h4>
            </div>
        </div>
        <hr/>
        @foreach (var item in Model.Basket.Products)
        {
            <div class="row">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <img src="@Convert.ToBase64String(item.Image)" class="rounded mx-auto d-block img-fluid" alt="product_img" height="40" width="40">
                        </div>
                    </div>
                </div>
            </div>
            <hr/>
        }
    </div>
}