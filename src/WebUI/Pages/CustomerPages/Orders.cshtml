@page
@model DeliveryWebApp.WebUI.Pages.CustomerPages.OrdersModel
@{
    ViewData["Title"] = "Orders";
}

<div class="text-center">
    <table class="table">
        <thead>
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.Order.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Restaurateur)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Products)
                </th>
                <th>
                    Total Price
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Order.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.Date)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.Restaurateur.RestaurantName)
                </td>
                <td>
                    <button class="btn btn-outline-dark">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                    </button>

                    @* Vertically centered scrollable modal *@

                    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                        <table class="table">
                            <thead>
                                <tr class="table-success">
                                    <th>
                                        @Html.DisplayNameFor(model => model.Products[0].Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Products[0].Quantity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Products[0].Price)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Products[0].Discount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Products[0].Category)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products)
                                {
                                <tr>
                                    <td>
                                        <img src="@Convert.ToBase64String(product.Image)" class="rounded mx-auto d-block img-fluid" alt="product_image" height="40" width="40">
                                        @Html.DisplayFor(item => product.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(item => product.Quantity)
                                    </td>
                                    <td>
                                        @* TODO: Culture *@
                                        @Html.DisplayFor(item => product.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(item => product.Discount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(item => product.Category)
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Order.TotalPrice)
                </td>
            </tr>
        </tbody>
    </table>
</div>
