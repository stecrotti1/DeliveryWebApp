@page
@using DeliveryWebApp.Infrastructure.Identity
@using DeliveryWebApp.Infrastructure.Security
@using IdentityServer4.Extensions
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> userManager
@model DeliveryWebApp.WebUI.Pages.CustomerPages.RestaurantListModel
@{
    ViewData["Title"] = "Food vendors list";
}
@* TODO: localize *@



@section Head
{
    <link rel="stylesheet" href="~/css/images.css"/>
    <link type="text/css" rel="stylesheet" href="~/lib/jsgrid-1.5.3/jsgrid.min.css"/>
    <link type="text/css" rel="stylesheet" href="~/lib/jsgrid-1.5.3/jsgrid-theme.min.css"/>

    <style type="text/css">
        .square {
            height: 80px;
            width: 80px;
        }
    </style>
}

@if (Model.Customer.Addresses.IsNullOrEmpty())
{
    <div class="alert alert-warning" role="alert">
        In order to buy from food vendors you have to register at least 1 address to your profile.
        <br/>
        Go to your <a asp-area="Identity" asp-page="/Account/Manage/Address" class="alert-link">profile</a> to set one.
    </div>
}
else
{
    @if (Model.Restaurants.IsNullOrEmpty())
    {
        <div class="alert alert-secondary" role="alert">
            Unfortunately there are no food vendors at the moment.
        </div>
    }
    else
    {
        <div id="jsGrid"></div>

    @section Scripts
    {
        <script defer="" type="text/javascript" src="~/lib/jsgrid-1.5.3/jsgrid.min.js"></script>

        <script type="text/javascript">
            $(function() {

                $("#jsGrid").jsGrid({
                    height: "50%",
                    width: "100%",

                    filtering: true,
                    inserting: false,
                    editing: false,
                    sorting: true,
                    paging: true,
                    autoload: true,

                    pageSize: 10,
                    pageButtonCount: 5,

                    controller: {
                        loadData: function(filter) {
                            return $.ajax({
                                type: "GET",
                                url: "/api/restaurants",
                                data: filter,
                                dataType: "json",
                                success: function() {
                                    console.log("Data received with success");
                                },
                                error: function() {
                                    console.log("Error receiving data");
                                }
                            });
                        }
                    },

                    fields: [
                        { name: "name", type: "text", width: 150, title: "Name"},
                        { category: "category", type: "text", width: 150, title: "Category" }
                    ]
                });
            });

        </script>
    }

    }
}