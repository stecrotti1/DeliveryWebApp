@page
@using System.Globalization
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Configuration
@using Microsoft.Extensions.Localization
@model RestaurantDashboardModel
@inject IConfiguration configuration
@inject IStringLocalizer<RestaurantDashboardModel> localizer
@{
    ViewData["Title"] = "Dashboard";

    var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
    var requestCulture = requestCultureFeature?.RequestCulture;
    var regionInfo = new RegionInfo("en-US");
    var isNeutralCulture = requestCulture?.Culture.IsNeutralCulture;

    if (isNeutralCulture.HasValue && !isNeutralCulture.Value)
    {
        regionInfo = new RegionInfo(requestCulture.Culture.LCID);
    }
}

@section Head
{
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/css/images.css" type="text/css" />

@* Google fonts *@
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;500&display=swap" rel="stylesheet">
}

<p id="country-code" data-country="@regionInfo.TwoLetterISORegionName" hidden></p>
<p id="lang-code" data-lang="@requestCulture?.Culture.TwoLetterISOLanguageName" hidden></p>

@if (!Model.HasRestaurant)
{
    // Create new restaurant
    <div class="text-start">

        <div class="card card-body shadow">
            <form method="post" enctype="multipart/form-data">

                <div class="form-row">
                    <div class="mb-3">
                        <label asp-for="Input.Logo" class="form-label">@localizer["Choose a logo"]</label>
                        <input class="form-control shadow" type="file" asp-for="Input.Logo" id="new-logo">
                        <span asp-validation-for="Input.Logo" class="text-danger"></span>
                    </div>

                    <img id="img-uploaded" src="" class="rounded img-fluid square float-start shadow fade-effect" alt="" hidden>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Input.Name">@localizer["Name"]</label>
                        <input class="form-control shadow" asp-for="Input.Name" id="name">
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-7">
                        <div class="form-group col-md-7">
                            <label asp-for="Input.Category">@localizer["Category"]</label>
                            <select class="form-select shadow" id="category" aria-label="Select category" asp-for="Input.Category" asp-items="Model.Categories" required>
                            </select>
                            <span asp-validation-for="Input.Category" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                @* Address *@

                <div class="form-group col-md-7">
                    <label class="form-label">@localizer["Address"]</label>
                    <div class="input-group col-7">
                        <input class="form-control" asp-for="Input.PlaceName" id="restaurant-address" value="" />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary shadow" type="button" id="location-btn" data-bs-toggle="tooltip" data-bs-placement="right" title="@localizer["Automatically detect your position"]">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="Input.PlaceName" class="text-danger"></span>
                </div>

                <input id="latitude" type="text" asp-for="Input.Latitude" asp-is-invariant="true" hidden />
                <input id="longitude" type="text" asp-for="Input.Longitude" asp-is-invariant="true" hidden />

                <button type="submit" id="submit-btn" class="btn btn-primary">@localizer["Submit"]</button>
            </form>

        </div>
    </div>

    <div id="image" class="text-center">
        <img src="/icons/undraw_Hamburger_8ge6.svg" alt="hamburger" height="225" width="225" />
    </div>
}
else
{
    <p style="font-family: 'Roboto', sans-serif; font-size: medium; font-size: 2rem">@Html.DisplayFor(modal => modal.Restaurateur.RestaurantName)</p>
    <hr />
    <div class="d-flex align-items-start">
        <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">

            <button class="nav-link active" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home" aria-selected="true">
                Dashboard
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shop" viewBox="0 0 16 16">
                    <path d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.371 2.371 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976l2.61-3.045zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0zM1.5 8.5A.5.5 0 0 1 2 9v6h1v-5a1 1 0 0 1 1-1h3a1 1 0 0 1 1 1v5h6V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5zM4 15h3v-5H4v5zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3zm3 0h-2v3h2v-3z" />
                </svg>
            </button>

            <a asp-page="/RestaurateurPages/RestaurantProducts" class="nav-link" id="v-pills-products-tab" role="tab" aria-selected="false">
                @localizer["Products"]
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-seam" viewBox="0 0 16 16">
                    <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2l-2.218-.887zm3.564 1.426L5.596 5 8 5.961 14.154 3.5l-2.404-.961zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z" />
                </svg>
            </a>

            <a asp-page="/RestaurateurPages/RestaurantOrders" class="nav-link" id="v-pills-orders-tab" role="tab" aria-selected="false">
                @localizer["Orders"]
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-mailbox" viewBox="0 0 16 16">
                    <path d="M4 4a3 3 0 0 0-3 3v6h6V7a3 3 0 0 0-3-3zm0-1h8a4 4 0 0 1 4 4v6a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V7a4 4 0 0 1 4-4zm2.646 1A3.99 3.99 0 0 1 8 7v6h7V7a3 3 0 0 0-3-3H6.646z" />
                    <path d="M11.793 8.5H9v-1h5a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.354-.146l-.853-.854zM5 7c0 .552-.448 0-1 0s-1 .552-1 0a1 1 0 0 1 2 0z" />
                </svg>
            </a>
        </div>
        <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
            </div>

        </div>
    </div>
}

@section Scripts
{
<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
<script src="/js/dashboard.js" type="text/javascript"></script>

<partial name="_ValidationScriptsPartial" />
}