                    <path d="M4 4a3 3 0 0 0-3 3v6h6V7a3 3 0 0 0-3-3zm0-1h8a4 4 0 0 1 4 4v6a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V7a4 4 0 0 1 4-4zm2.646 1A3.99 3.99 0 0 1 8 7v6h7V7a3 3 0 0 0-3-3H6.646z" />
                    <path d="M11.793 8.5H9v-1h5a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.354-.146l-.853-.854zM5 7c0 .552-.448 0-1 0s-1 .552-1 0a1 1 0 0 1 2 0z" />
                </svg>
            </a>
        </div>
        <div class="tab-content" id="v-pills-tabContent">

            <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">

                @await Html.PartialAsync("EditRestaurant.cshtml", Model)

            </div>
        </div>
    </div>
}

@section Scripts
{
    <script defer src="/js/image_utilities.js" type="text/javascript"></script>

    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript" language="javascript">
        $(function () {
            // LOCATION
            $("#location-btn").on("mousedown",
                function () {
                    navigator.geolocation.getCurrentPosition(getCoords);
                });

            $("#save-btn").on("mousedown",
                function () {
                    const accessToken = 'pk.eyJ1Ijoic3RlY3JvdHRpMSIsImEiOiJja3Bna2kzbHYyaThoMm9ueHl1dzlnaTc1In0.EpALSOaDOmuM8XGS_IQzvA';
                    const query = `${$("#update-addressline1").val()}, ${$("#update-addressline2").val()}, ${$("#update-number").val()}, ${$("#update-city").val()}, ${$("#update-postalcode").val()}, ${$("#update-stateprovince").val()}, ${$("#update-country option:selected").val()}`;

                    const url = `https://api.mapbox.com/geocoding/v5/mapbox.places/${query}.json?limit=1&access_token=${accessToken}`;

                    $.ajax({
                        type: "GET",
                        url: url,
                        dataType: "JSON",
                        contentType: "application/json; charset=utf-8",
                        success: function (data, status, xhr) {
                            const [longitude, latitude] = data.features[0].center;
                            console.log(latitude);
                            $("#update-longitude").val(longitude);
                            $("#update-latitude").val(latitude);
                        },
                        error: function () {
                            console.log("Error");
                        }
                    });
                });

            function getCoords(position) {
                const accessToken = 'pk.eyJ1Ijoic3RlY3JvdHRpMSIsImEiOiJja3Bna2kzbHYyaThoMm9ueHl1dzlnaTc1In0.EpALSOaDOmuM8XGS_IQzvA';
                const url = `https://api.mapbox.com/geocoding/v5/mapbox.places/${position.coords.longitude},${position.coords.latitude}.json?limit=1&access_token=${accessToken}`;

                $.ajax({
                    type: "GET",
                    async: true,
                    url: url,
                    dataType: "JSON",
                    contentType: "application/json; charset=utf-8",
                    success: function (data, status, xhr) {
                        $("#input-address").val(data.features[0].place_name);

                        console.log(position.coords.latitude);
                        console.log(position.coords.longitude);

                        // set inputs
                        $("#addressline1").val(data.features[0].text);
                        $("#addressline2").val("");
                        $("#number").val(data.features[0].address);
                        $("#postalcode").val(data.features[0].context[0].text);
                        $("#city").val(data.features[0].context[1].text);
                        $("#stateprovince").val(data.features[0].context[2].text);
                        $("#country option:selected").val(data.features[0].context[3].text);
                        $("#latitude").val(position.coords.latitude);
                        $("#longitude").val(position.coords.longitude);
                    },
                    error: function () {
                        console.log("Error");
                    }
                });
            }
        });
    </script>
}