@page
@using System.Globalization
@using Castle.Core.Internal
@using DeliveryWebApp.Infrastructure.Identity
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Configuration
@using Microsoft.Extensions.Localization
@model RestaurantDashboardModel
@inject IConfiguration configuration
@inject UserManager<ApplicationUser> userManager
@inject IStringLocalizer<RestaurantDashboardModel> localizer
@{
    ViewData["Title"] = "Dashboard";

    var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
    var requestCulture = requestCultureFeature?.RequestCulture;
    var regionInfo = new RegionInfo("en-US");
    var isNeutralCulture = requestCulture?.Culture.IsNeutralCulture;

    if (isNeutralCulture.HasValue && !isNeutralCulture.Value)
    {
        regionInfo = new RegionInfo(requestCulture.Culture.LCID);
    }
}

@section Head
{
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/css/images.css" type="text/css" />
<link rel="stylesheet" href="/css/dashboard.css" />

@* Google fonts *@
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;500&display=swap" rel="stylesheet">
}

<p id="country-code" data-country="@regionInfo.TwoLetterISORegionName" hidden></p>
<p id="lang-code" data-lang="@requestCulture?.Culture.TwoLetterISOLanguageName" hidden></p>

@if (!Model.HasRestaurant)
{
    // Create new restaurant
    <div class="text-start">

        <div class="card card-body shadow">
            <form method="post" enctype="multipart/form-data">

                <div class="form-row">
                    <div class="mb-3">
                        <label asp-for="Input.Logo" class="form-label">@localizer["Choose a logo"]</label>
                        <input class="form-control shadow" type="file" asp-for="Input.Logo" id="new-logo">
                        <span asp-validation-for="Input.Logo" class="text-danger"></span>
                    </div>

                    <img id="img-uploaded" src="" class="rounded img-fluid square float-start shadow fade-effect" alt="" hidden>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Input.Name">@localizer["Name"]</label>
                        <input class="form-control shadow" asp-for="Input.Name" id="name">
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-7">
                        <div class="form-group col-md-7">
                            <label asp-for="Input.Category">@localizer["Category"]</label>
                            <select class="form-select shadow" id="category" aria-label="Select category" asp-for="Input.Category" asp-items="Model.Categories" required>
                            </select>
                            <span asp-validation-for="Input.Category" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                @* Address *@

                <div class="form-group col-md-7">
                    <label class="form-label">@localizer["Address"]</label>
                    <div class="input-group col-7">
                        <input class="form-control" asp-for="Input.PlaceName" id="restaurant-address" value="" />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary shadow" type="button" id="location-btn" data-bs-toggle="tooltip" data-bs-placement="right" title="@localizer["Automatically detect your position"]">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="Input.PlaceName" class="text-danger"></span>
                </div>

                <input id="latitude" type="text" asp-for="Input.Latitude" asp-is-invariant="true" hidden />
                <input id="longitude" type="text" asp-for="Input.Longitude" asp-is-invariant="true" hidden />

                <button type="submit" id="submit-btn" class="btn btn-primary">@localizer["Submit"]</button>
            </form>

        </div>
    </div>

    <div id="image" class="text-center">
        <img src="/icons/undraw_Hamburger_8ge6.svg" alt="hamburger" height="225" width="225" />
    </div>
}
else
{
    <img id="dashboard-img" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Restaurateur.Logo)" class="rounded img-fluid square shadow-lg" alt="@Model.Restaurateur.RestaurantName" />
    <button class="btn btn-secondary edit-img-btn" type="button" value="NewImage" onclick="openFiles();" id="upload-new-img">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
        </svg>
    </button>
    <input type="file" id="new-img-input" style="display: none;" />

    <p id="restaurant-name" class="title text-start shadow p-2 mb-4 bg-body rounded">@Html.DisplayFor(model => model.Restaurateur.RestaurantName)</p>
    <hr />
    <div class="container" id="dashboard-items">

        <div class="row">

            <div class="col">

                @* Name *@
                <div class="form-group col-md-7">
                    <label class="form-label">@localizer["Name"]</label>
                    <div class="input-group">
                        <input class="form-control shadow" value="@Model.Restaurateur.RestaurantName" id="name" disabled />
                        <div class="input-group-append">
                            <button id="edit-restaurant-name" type="button" class="btn btn-outline-secondary shadow">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>

                @* Category *@
                <div class="form-group col-md-7">
                    <label asp-for="Input.Category">@localizer["Category"]</label>
                    <div class="input-group">
                        <select class="form-select shadow" id="category" aria-label="Select category" asp-for="Input.Category" asp-items="Model.Categories" required disabled></select>
                        <div class="input-group-append">
                            <button id="edit-restaurant-category" type="button" class="btn btn-outline-secondary shadow">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                </svg>
                            </button>
                        </div>
                        <span asp-validation-for="Input.Category" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="col">

                @* Address *@
                <div class="form-group col-lg-12">
                    <label class="form-label">@localizer["Address"]</label>
                    <div class="input-group col-7">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary shadow" type="button" id="location-btn" data-bs-toggle="tooltip" data-bs-placement="right" title="@localizer["Automatically detect your position"]" disabled>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                </svg>
                            </button>
                        </div>
                        <input class="form-control" asp-for="Input.PlaceName" id="edit-restaurant-address" value="@Model.Restaurateur.RestaurantAddress.PlaceName" disabled />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary shadow" type="button" id="edit-location-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                    <span asp-validation-for="Input.PlaceName" class="text-danger"></span>
                </div>

                <input id="latitude" type="text" asp-for="Input.Latitude" hidden />
                <input id="longitude" type="text" asp-for="Input.Longitude" hidden />
            </div>

        </div>

    </div>

    <hr />

    <h4 class="title">@localizer["Reviews"]</h4>

    <div class="container">
        @if (Model.Restaurateur.RestaurateurReviews.IsNullOrEmpty())
        {
            <div class="alert alert-secondary" role="alert">
                @localizer["There are no reviews at the moment"]
            </div>
        }
        else
        {
            @foreach (var review in Model.Restaurateur.RestaurateurReviews)
            {
                <div class="text-start">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">
                                    @Html.DisplayFor(model => review.Title)
                                </div>
                                @Html.DisplayFor(model => review.Text)
                                <hr />
                                @{
                                    var user = await userManager.FindByIdAsync(review.Customer.ApplicationUserFk);
                                }
                                <small class="text-muted text-info">@Html.DisplayFor(model => user.UserName) &middot; @review.Date.ToLocalTime().ToString("d")</small>
                            </div>
                            <span class="badge bg-primary rounded-pill">@Html.DisplayFor(model => review.Rating) / 5</span>
                        </li>
                    </ul>
                </div>
            }
        }
    </div>
}

@section Scripts
{
<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
<script src="/js/dashboard.js" type="text/javascript"></script>

<partial name="_ValidationScriptsPartial" />
}