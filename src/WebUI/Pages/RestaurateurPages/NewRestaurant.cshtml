@model DeliveryWebApp.WebUI.Pages.RestaurateurPages.RestaurantDashboardModel

@section Head
{
    <link rel="stylesheet" href="/css/images.css" type="text/css" />

    @* Google fonts *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;500&display=swap" rel="stylesheet">
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="text-start">
    <hr />
    <h6>
        <img src="/icons/shop.svg" alt="shop" height="32" width="32" />
        Register your restaurant
    </h6>
    <br />
    <button id="begin" class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseForm" aria-expanded="false" aria-controls="collapseForm">Begin</button>

    <div class="collapse" id="collapseForm">
        <div class="card card-body">
            <form method="post" enctype="multipart/form-data">

                <div class="form-row">
                    <div class="mb-3">
                        <label asp-for="Input.Logo" class="form-label">Choose a logo for your restaurant</label>
                        <input class="form-control" type="file" asp-for="Input.Logo" onchange="readUrl(this);">
                        <span asp-validation-for="Input.Logo" class="text-danger"></span>
                    </div>
                    <div id="spinner" class="form-row square" style="margin-left: 1rem;">
                        <img id="img-uploaded" src="" class="rounded img-fluid float-start" alt="" hidden>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Input.Name"></label>
                        <input class="form-control" asp-for="Input.Name">
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-7">
                        <div class="form-group col-md-3">
                            <label asp-for="Input.Category"></label>
                            <select class="form-select" aria-label="Select category" asp-for="Input.Category" asp-items="Model.Categories">
                            </select>
                            <span asp-validation-for="Input.Category" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                @* Address *@

                <div class="form-group col-md-7">
                    <label class="form-label">Address</label>
                    <div class="input-group col-7">
                        <input class="form-control" id="input-address" value="" disabled />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="location-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                </svg>
                            </button>
                            <button id="ok-btn" type="button" class="btn btn-outline-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save" viewBox="0 0 16 16">
                                    <path d="M2 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H9.5a1 1 0 0 0-1 1v7.293l2.646-2.647a.5.5 0 0 1 .708.708l-3.5 3.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L7.5 9.293V2a2 2 0 0 1 2-2H14a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h2.5a.5.5 0 0 1 0 1H2z"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>

                <button class="btn btn-outline-secondary edit-btn" data-bs-toggle="collapse" data-bs-target="#address-0-collapse" aria-expanded="false" aria-controls="address-0-collapse">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                    </svg>
                    Insert Manually
                </button>

                <div class="collapse" id="address-0-collapse">
                    <div class="card card-body">

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Input.AddressLine1"></label>
                                <input class="form-control" asp-for="Input.AddressLine1" placeholder="Address Line 1" id="addressline1">
                                <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Input.AddressLine2"></label>
                                <input class="form-control" asp-for="Input.AddressLine2" placeholder="Address Line 2" id="addressline2">
                                <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-1">
                                <label asp-for="Input.Number"></label>
                                <input class="form-control" asp-for="Input.Number" placeholder="1, 21B..." id="number">
                                <span asp-validation-for="Input.Number" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Input.City"></label>
                                <input class="form-control" asp-for="Input.City" placeholder="City" id="city">
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Input.StateProvince"></label>
                                <input class="form-control" asp-for="Input.StateProvince" placeholder="CA, NY, ..." id="stateprovince">
                                <span asp-validation-for="Input.StateProvince" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Input.PostalCode"></label>
                                <input class="form-control" asp-for="Input.PostalCode" placeholder="Postal Code: 20020..." id="postalcode">
                                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="Input.Country"></label>
                                <select class="form-select" aria-label="Select country" asp-for="Input.Country" asp-items="Model.Countries" id="country">
                                </select>
                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" asp-for="Input.Latitude" id="latitude" hidden>
                        </div>
                        <div class="form-group col-md-6">
                            <input class="form-control" asp-for="Input.Longitude" id="longitude" hidden>
                        </div>

                    </div>
                </div>

                <button type="submit" id="new-restaurant-btn" class="btn btn-primary" value="NewRestaurant">Submit</button>
            </form>

        </div>
    </div>
</div>

<div id="image" class="text-center">
    <img src="/icons/undraw_Hamburger_8ge6.svg" alt="hamburger" height="225" width="225" />
</div>