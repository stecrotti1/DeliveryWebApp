@page
@using Microsoft.Extensions.Localization
@model ExternalLoginModel
@inject IStringLocalizer<ExternalLoginModel> localizer
@{
    ViewData["Title"] = localizer["Register"];
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">@localizer["Associate your"] @Model.ProviderDisplayName @localizer["account."]</h4>
<hr />

<p id="external-login-description" class="text-info">
    @localizer["You've successfully authenticated with"] <strong>@Model.ProviderDisplayName</strong>.
    @localizer["Please enter your first name, last name, username and an email address for this site below and click the Register button to finish logging in."]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.FName">@localizer["First Name"]</label>
                <input asp-for="Input.FName" class="form-control" />
                <span asp-validation-for="Input.FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LName">@localizer["Last Name"]</label>
                <input asp-for="Input.LName" class="form-control" />
                <span asp-validation-for="Input.LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@localizer["Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
