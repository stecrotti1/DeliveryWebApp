@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>

    <script defer src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.0/mapbox-gl-geocoder.min.js"></script>
    <script defer src="https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.js"></script>

    <script defer type="text/javascript">
        mapboxgl.accessToken = 'pk.eyJ1Ijoic3RlY3JvdHRpMSIsImEiOiJja3Bna2kzbHYyaThoMm9ueHl1dzlnaTc1In0.EpALSOaDOmuM8XGS_IQzvA';

        const address = document.getElementById("address-geo-loc");

        function getLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            }
        }

        function showPosition(position) {

            const geocodingClient = new MapboxGeocoder({
                accessToken: mapboxgl.accessToken,
                types: 'country,region,place,postcode,locality,neighborhood'
            });

            geocodingClient.reverseGeocode({
                    query: [position.coords.latitude, position.coords.longitude]
                })
                .send()
                .then(response => {
                    // GeoJSON document with geocoding matches
                    const match = response.body;

                    address.value = match.place_name;
                });

        }
    </script>
}